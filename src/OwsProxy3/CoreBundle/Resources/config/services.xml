<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="owsproxy.logginglistener.class">OwsProxy3\CoreBundle\EventListener\LoggingListener</parameter>
        <parameter key="owsproxy.user_agent">OWSProxy3</parameter>
        <parameter key="owsproxy.buzz_client.class">OwsProxy3\CoreBundle\Component\BuzzClient</parameter>
        <parameter key="owsproxy.buzz_client.user_agent">%owsproxy.user_agent%</parameter>
        <parameter key="owsproxy.http_foundation_client.class">OwsProxy3\CoreBundle\Component\HttpFoundationClient</parameter>
        <parameter key="owsproxy.http_foundation_client.user_agent">%owsproxy.user_agent%</parameter>
    </parameters>

    <services>
        <!-- @todo v3.2.0: remove. Redundant vs web server logging, and a constant source of ORM UnitOfWork consistency problems -->
        <service id="owsproxy.logginglistener" class="%owsproxy.logginglistener.class%">
            <tag name="kernel.event_listener" event="kernel.terminate" method="onTerminate"/>

            <argument type="service" id="security.token_storage" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%owsproxy.logging%</argument>
            <argument>%owsproxy.obfuscate_client_ip%</argument>
        </service>
        <service id="owsproxy.buzz_client" class="%owsproxy.buzz_client.class%">
            <argument>%owsproxy.proxy%</argument>
            <argument>%owsproxy.buzz_client.user_agent%</argument>
            <argument type="service" id="logger" on-invalid="null" />
        </service>
        <service id="owsproxy.http_foundation_client" class="%owsproxy.http_foundation_client.class%">
            <argument>%owsproxy.proxy%</argument>
            <argument>%owsproxy.http_foundation_client.user_agent%</argument>
            <argument type="service" id="logger" on-invalid="null" />
        </service>
        <service id="OwsProxy3\CoreBundle\Controller\OwsProxyController" class="OwsProxy3\CoreBundle\Controller\OwsProxyController" public="true">
            <argument type="service" id="templating" />
            <argument type="service" id="owsproxy.http_foundation_client" />
            <argument type="service" id="signer" />
            <argument type="service" id="logger" on-invalid="null" />
        </service>
    </services>
</container>
